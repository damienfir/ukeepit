<Window x:Class="uKeepIt.ConfigurationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="uKeepIt" Height="351" Width="525">
    <Grid x:Name="maingrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" MinHeight="79"/>
            <RowDefinition Height="112*"/>
            <RowDefinition Height="76*"/>
            <RowDefinition Height="53*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="126*"/>
            <ColumnDefinition Width="391*"/>
        </Grid.ColumnDefinitions>
        <Label Content="Master Password" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="26" Width="100" Padding="5"/>
        <Label Content="Clouds" Margin="10,10,0,0" Grid.Row="1" VerticalAlignment="Top" HorizontalAlignment="Left" Height="26" Width="46"/>
        <Button x:Name="done_button" Content="Done" Grid.Column="1" Margin="0,0,10,10" Grid.Row="3" Click="done_button_click" VerticalAlignment="Bottom" HorizontalAlignment="Right" Padding="10,5" Height="28" Width="51"/>
        <StackPanel x:Name="cloud_stack" Grid.Column="1" Grid.Row="1" Margin="10,10,10,36" ScrollViewer.VerticalScrollBarVisibility="Disabled">
            <Grid Height="22">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="80*"/>
                    <ColumnDefinition Width="184*"/>
                    <ColumnDefinition Width="107*"/>
                </Grid.ColumnDefinitions>
            </Grid>
        </StackPanel>
        <Label Content="Folders" HorizontalAlignment="Left" Margin="10,10,0,0" Grid.Row="2" VerticalAlignment="Top"/>
        <StackPanel x:Name="folders_stack" Grid.Column="1" Grid.Row="2"/>
        <Button x:Name="store_add_button" Content="Add" HorizontalAlignment="Left" VerticalAlignment="Bottom" Click="store_add_button_click" Padding="10,5" Grid.Column="1" Margin="10,0,0,3" Grid.Row="1"/>
        <Button x:Name="space_add_button" Content="Add" HorizontalAlignment="Left" VerticalAlignment="Bottom" Click="space_add_button_click" Padding="10,5" Grid.Column="1" Margin="10,0,0,10" Grid.Row="2"/>
        <Button x:Name="quit_btn" Content="Quit" Grid.Column="1" HorizontalAlignment="Left" Margin="258,15,0,0" Grid.Row="3" VerticalAlignment="Top" Width="56" Click="quit_btn_click" Height="28"/>
    </Grid>
</Window>
